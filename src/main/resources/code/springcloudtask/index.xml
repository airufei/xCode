<?xml version="1.0" encoding="utf-8"?>
<template>
    <name>index</name>
    <filePath>src/main/resources/template/${modulePageName}</filePath>
    <fileName>${className}-index.ftl</fileName>
    <content><![CDATA[

<!DOCTYPE html>
<html>
<head>
  	 ${r'<#import "/common/common.macro.ftl" as netCommon>'}
	${r'<@netCommon.commonStyle />'}
    <!-- DataTables -->
    <link rel="stylesheet" href="/jobadmin/adminlte/plugins/datatables/dataTables.bootstrap.css">
    <title>${functionName}管理</title>
</head>
<body class="hold-transition skin-blue sidebar-mini  ${r'<#if cookieMap?exists && "off" == cookieMap["xxljob_adminlte_settings"].value >sidebar-collapse</#if>'}">
<div class="wrapper">
    <!-- header -->
	${r'<@netCommon.commonHeader />'}
    <!-- left -->
	${r'<@netCommon.commonLeft "${className}" />'}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>${functionName}</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">

                <div class="col-xs-3">
                    <div class="input-group">
                        <span class="input-group-addon">键</span>
                        <input type="text" class="form-control" id="dictKey" autocomplete="on">
                    </div>
                </div>

                <div class="col-xs-1">
                    <button class="btn btn-block btn-info" id="searchBtn">搜索</button>
                </div>

                <div class="col-xs-2">
                    <button class="btn btn-block btn-success add" type="button">新增</button>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <table id="${className}_list" class="table table-bordered table-striped" width="100%">
                                <thead>
                                <tr>
                                  <#list colList as c>
                                   <#if (c.isList?? && c.isList == "1")>
                                    <th name="${c.javaFieldId}">${c.comments}</th>
                                    </#if>
                                  </#list>
                                    <th name="operate">操作</th>
                                </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- footer -->
	${r'<@netCommon.commonFooter />'}
</div>

<!-- job新增.模态框 -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">新增${functionName}</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal form" role="form">
               <#list colList as c>
		          <#if (c.isEditPage?? && c.isEditPage == "1")>
                    <div class="form-group">
                        <label for="${c.javaFieldId}" class="col-sm-2 control-label">${c.comments}<font color="red">*</font></label>
                        <div class="col-sm-10"><input type="text" class="form-control" name="${c.javaFieldId}" placeholder="请输入..."
                           maxlength="${c.dataLength}"></div>
                    </div>
                  </#if>
                </#list>
                    <hr>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-6">
                            <button type="submit" class="btn btn-primary">${r'${I18n.system_save}'}</button>
                            <button type="button" class="btn btn-default"
                                    data-dismiss="modal">${r'${I18n.system_cancel}'}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

 ${r'<@netCommon.commonScript />'}
<!-- DataTables -->
<script src="/jobadmin/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/jobadmin/adminlte/plugins/datatables/dataTables.bootstrap.min.js"></script>
<script src="/jobadmin/plugins/jquery/jquery.validate.min.js"></script>
<!-- moment -->
<script src="/jobadmin/adminlte/plugins/daterangepicker/moment.min.js"></script>
<script src="/jobadmin/js/${className}.index.1.js"></script>
</body>
</html>

   ]]>
    </content>
</template>